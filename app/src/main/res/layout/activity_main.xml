<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:textSize="90dp"
        android:gravity="bottom|right"
        android:text=""
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/screen"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_weight="1"
        android:padding="5dp">


        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="Ac"
            android:textSize="30dp"
            android:background="@drawable/button"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:onClick="clearScreen"

            />

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="←"
            android:textSize="40dp"
            android:textFontWeight="@integer/material_motion_duration_long_2"
            android:background="@drawable/button"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:onClick="backBtn"/>

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="%"
            android:textSize="30dp"
            android:background="@drawable/button"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="/"
            android:textSize="30dp"
            android:background="@drawable/oparators"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:onClick="division"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_weight="1"
        android:padding="5dp">


        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="7"
            android:textSize="30dp"
            android:layout_weight="1"
            android:background="@drawable/numbers"
            android:layout_marginRight="10dp"
            android:onClick="numSeven"/>

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="8"
            android:textSize="30dp"
            android:layout_weight="1"
            android:background="@drawable/numbers"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:onClick="numEight"/>

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="9"
            android:textSize="30dp"
            android:layout_weight="1"
            android:background="@drawable/numbers"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:onClick="numNine"/>

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="X"
            android:textSize="30dp"
            android:layout_weight="1"
            android:background="@drawable/oparators"
            android:layout_marginLeft="10dp"
            android:onClick="multiply"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity=""
        android:padding="5dp"
        android:weightSum="4"
        android:layout_weight="1">


        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/numbers"
            android:text="4"
            android:textSize="30dp"
            android:onClick="numFour"/>

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/numbers"
            android:text="5"
            android:textSize="30dp"
            android:onClick="numFive"/>

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/numbers"
            android:text="6"
            android:textSize="30dp"
            android:onClick="numSix"
            />

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/oparators"
            android:layout_weight="1"
            android:text="-"
            android:textSize="30dp"
            android:onClick="minus"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity=""
        android:padding="5dp"
        android:weightSum="4"
        android:layout_weight="1">


        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/numbers"
            android:text="1"
            android:textSize="30dp"
            android:onClick="numOne"/>

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/numbers"
            android:text="2"
            android:textSize="30dp"
            android:onClick="numTwo"/>

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/numbers"
            android:text="3"
            android:textSize="30dp"
            android:onClick="numThree"/>

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/oparators"
            android:text="+"
            android:textSize="30dp"
            android:onClick="plus"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity=""
        android:padding="5dp"
        android:weightSum="4"
        android:layout_weight="1">


        <Button
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginRight="10dp"
            android:layout_weight="2.13"
            android:background="@drawable/numbers"
            android:text="0"
            android:textSize="30dp"
            android:onClick="numZero"/>


        <Button
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/numbers"
            android:text="."
            android:textSize="30dp"
            android:onClick="dot"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/oparators"
            android:text="="
            android:textSize="30dp"
            android:onClick="equal"/>
    </LinearLayout>

</LinearLayout>